<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/heading"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@color/light_pink"
            android:gravity="center"
            android:text="CAFE"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginBottom="28dp"
            android:ems="10"
            android:hint="Enter order one"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/et2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginBottom="28dp"
            android:ems="10"
            android:hint="Enter order two"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/et3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginBottom="28dp"
            android:ems="10"
            android:hint="Enter order three"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/et4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:hint="Enter order four"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/orderbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/orderbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="268dp"
            android:backgroundTint="@color/light_pink"
            android:text="Place Order"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>